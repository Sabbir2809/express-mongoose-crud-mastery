{
  "name": "express-mongoose-crud-mastery",
  "version": "1.0.0",
  "description": "Develop a Node.js Express application with TypeScript as the programming language, integrating MongoDB with Mongoose for user data and order management.",
  "main": "server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "tsnd --respawn ./src/server.ts",
